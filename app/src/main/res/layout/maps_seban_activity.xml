<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="match_parent"
                tools:context=".MapsActivity">
    <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:focusableInTouchMode="true"/>

    <Button android:layout_width="50dp" android:layout_height="30dp"
            android:background="@drawable/button_veichel"
            android:focusable="true"
            android:text="car"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="75dp"
            android:layout_marginTop="33dp"
            android:layout_alignParentTop="true"
            android:id="@+id/carSelect"
    />
    <Button android:layout_width="50dp" android:layout_height="30dp"
            android:background="@drawable/button_veichel"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="33dp"
            android:layout_alignParentTop="true"
            android:id="@+id/bikeSelect"
            android:rotation="180"
            android:text="bike"
            android:focusableInTouchMode="true"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findService"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rounded_gradient"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:text="FIND SERVICE"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"/>


</RelativeLayout>