<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/gradient_warna">


    <ImageView android:layout_width="150dp"
               android:layout_height="150dp"
               android:src="@drawable/logo"
               android:layout_marginTop="50dp"
               android:layout_alignParentEnd="true" android:layout_marginEnd="138dp"
               android:layout_alignParentTop="true"/>
    <EditText
            android:id="@+id/et_username"

            android:layout_width="270dp"
            android:layout_height="45dp"
            android:hint="             |       Username"
            android:textColorHint="#ffff"
            android:background="@drawable/lengkung"
            android:layout_marginTop="250dp"

            android:layout_alignParentEnd="true" android:layout_marginEnd="82dp" android:layout_alignParentTop="true"/>
    <EditText
            android:id="@+id/et_password"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:hint="             |       Password"
            android:textColorHint="#ffff"
            android:background="@drawable/lengkung"
            android:layout_marginTop="333dp"
            android:inputType="textPassword"

            android:layout_alignParentEnd="true" android:layout_marginEnd="82dp" android:layout_alignParentTop="true"/>

    <ImageView android:layout_width="32dp"
               android:layout_height="33dp"
               android:src="@mipmap/wrench"
               android:layout_marginStart="-10dp"
               android:layout_alignStart="@+id/tv_signup"
               android:layout_marginTop="339dp"
               android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
               android:layout_marginEnd="216dp"/>
    <ImageView android:layout_width="32dp"
               android:layout_height="33dp"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="303dp" android:layout_alignParentBottom="true"
               android:layout_marginBottom="442dp"
               android:src="@mipmap/icon"/>
    <Button
            android:id="@+id/bnt_login"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="login"
            android:background="@drawable/lengkung2"
            android:layout_marginTop="100dp"
            android:textColor="#ffff"
            android:layout_alignParentBottom="true" android:layout_marginBottom="141dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="76dp" android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"/>
    <Button
            android:id="@+id/bnt_login_google"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="Google Signup"
            android:background="@drawable/lengkung3"
            android:drawableStart="@drawable/google_logo"
            android:paddingStart="10dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true" android:layout_marginBottom="81dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="76dp" android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"/>

    <TextView
            android:id="@+id/tv_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have account? Sign Up"
            android:textColor="#ffff"
            android:layout_marginTop="659dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true" android:layout_marginBottom="52dp"
            android:layout_alignParentTop="true"/>
</RelativeLayout>